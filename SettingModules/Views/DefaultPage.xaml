                </Border>
                <ComboBox Grid.Row="22" Grid.Column="1" Style="{StaticResource comboStyle}" SelectedItem="{Binding ConnTestFt, Mode=TwoWay}"/>
                <ComboBox Grid.Row="22" Grid.Column="2" Style="{StaticResource comboStyle}" SelectedItem="{Binding ConnTestBg, Mode=TwoWay}"/>

                <!--교정-->
