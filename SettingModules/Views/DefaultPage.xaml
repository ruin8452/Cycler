                <ComboBox Grid.Row="21" Grid.Column="1" Style="{StaticResource comboStyle}" SelectedItem="{Binding BalancingFt, Mode=TwoWay}"/>
                <ComboBox Grid.Row="21" Grid.Column="2" Style="{StaticResource comboStyle}" SelectedItem="{Binding BalancingBg, Mode=TwoWay}"/>

                <!--체결 테스트-->
                <Border Background="{Binding ConnTestBg}" Grid.Row="22" Grid.Column="0" Margin="3">
