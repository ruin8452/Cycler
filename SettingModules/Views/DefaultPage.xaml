                    <TextBlock Text="패턴공정" Foreground="{Binding PatternFt}" Style="{StaticResource txtStyle}" />
                </Border>
                <ComboBox Grid.Row="24" Grid.Column="1" Style="{StaticResource comboStyle}" SelectedItem="{Binding PatternFt, Mode=TwoWay}"/>
                <ComboBox Grid.Row="24" Grid.Column="2" Style="{StaticResource comboStyle}" SelectedItem="{Binding PatternBg, Mode=TwoWay}"/>

                <!--데이터 검사-->
                <Border Background="{Binding DataCheckBg}" Grid.Row="25" Grid.Column="0" Margin="3">
                    <TextBlock Text="데이터 검사" Foreground="{Binding DataCheckFt}" Style="{StaticResource txtStyle}" />
                </Border>
                <ComboBox Grid.Row="25" Grid.Column="1" Style="{StaticResource comboStyle}" SelectedItem="{Binding DataCheckFt, Mode=TwoWay}"/>
                <ComboBox Grid.Row="25" Grid.Column="2" Style="{StaticResource comboStyle}" SelectedItem="{Binding DataCheckBg, Mode=TwoWay}"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,0">
            <TextBlock Text="스탭 타입 색상 지정" Foreground="White" FontSize="15" Margin="10,67,0,0"/>

            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="55"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>                   
                </Grid.RowDefinitions>

                <TextBlock Text="상태명" Foreground="White" FontSize="13" Grid.Column="0" HorizontalAlignment="Center"/>
                <TextBlock Text="폰트색" Foreground="White" FontSize="13" Grid.Column="1" HorizontalAlignment="Center"/>
                <TextBlock Text="배경색" Foreground="White" FontSize="13" Grid.Column="2" HorizontalAlignment="Center"/>

                <!--OCV-->
                <Border Background="{Binding OcvStepBg}" Grid.Row="1" Grid.Column="0" Margin="3">
                    <TextBlock Text="OCV" Foreground="{Binding OcvStepFt}" Style="{StaticResource txtStyle}"/>
                </Border>
                <ComboBox Grid.Row="1" Grid.Column="1" Style="{StaticResource comboStyle}" SelectedItem="{Binding OcvStepFt, Mode=TwoWay}"/>
                <ComboBox Grid.Row="1" Grid.Column="2" Style="{StaticResource comboStyle}" SelectedItem="{Binding OcvStepBg, Mode=TwoWay}"/>

                <!--충전-->
                <Border Background="{Binding ChargeStepBg}" Grid.Row="2" Grid.Column="0" Margin="3">
                    <TextBlock Text="CAHRGE" Foreground="{Binding ChargeStepFt}" Style="{StaticResource txtStyle}" />
                </Border>
                <ComboBox Grid.Row="2" Grid.Column="1" Style="{StaticResource comboStyle}" SelectedItem="{Binding ChargeStepFt, Mode=TwoWay}"/>
                <ComboBox Grid.Row="2" Grid.Column="2" Style="{StaticResource comboStyle}" SelectedItem="{Binding ChargeStepBg, Mode=TwoWay}"/>

                <!--방전-->
                <Border Background="{Binding DischargeStepBg}" Grid.Row="3" Grid.Column="0" Margin="3">
                    <TextBlock Text="DISCAHRGE" Foreground="{Binding DischargeStepFt}" Style="{StaticResource txtStyle}" />
                </Border>
                <ComboBox Grid.Row="3" Grid.Column="1" Style="{StaticResource comboStyle}" SelectedItem="{Binding DischargeStepFt, Mode=TwoWay}"/>
                <ComboBox Grid.Row="3" Grid.Column="2" Style="{StaticResource comboStyle}" SelectedItem="{Binding DischargeStepBg, Mode=TwoWay}"/>

                <!--휴지-->
                <Border Background="{Binding RestStepBg}" Grid.Row="4" Grid.Column="0" Margin="3">
                    <TextBlock Text="REST" Foreground="{Binding RestStepFt}" Style="{StaticResource txtStyle}" />
                </Border>
                <ComboBox Grid.Row="4" Grid.Column="1" Style="{StaticResource comboStyle}" SelectedItem="{Binding RestStepFt, Mode=TwoWay}"/>
                <ComboBox Grid.Row="4" Grid.Column="2" Style="{StaticResource comboStyle}" SelectedItem="{Binding RestStepBg, Mode=TwoWay}"/>

                <!--패턴-->
                <Border Background="{Binding PatternStepBg}" Grid.Row="5" Grid.Column="0" Margin="3">
                    <TextBlock Text="PATTERN" Foreground="{Binding PatternStepFt}" Style="{StaticResource txtStyle}" />
                </Border>
                <ComboBox Grid.Row="5" Grid.Column="1" Style="{StaticResource comboStyle}" SelectedItem="{Binding PatternStepFt, Mode=TwoWay}"/>
                <ComboBox Grid.Row="5" Grid.Column="2" Style="{StaticResource comboStyle}" SelectedItem="{Binding PatternStepBg, Mode=TwoWay}"/>

                <!--임피던스-->
                <Border Background="{Binding ImpedanceStepBg}" Grid.Row="6" Grid.Column="0" Margin="3">
                    <TextBlock Text="IMPEDANCE" Foreground="{Binding ImpedanceStepFt}" Style="{StaticResource txtStyle}" />
                </Border>
                <ComboBox Grid.Row="6" Grid.Column="1" Style="{StaticResource comboStyle}" SelectedItem="{Binding ImpedanceStepFt, Mode=TwoWay}"/>
                <ComboBox Grid.Row="6" Grid.Column="2" Style="{StaticResource comboStyle}" SelectedItem="{Binding ImpedanceStepBg, Mode=TwoWay}"/>

                <!--사이클-->
                <Border Background="{Binding CycleStepBg}" Grid.Row="7" Grid.Column="0" Margin="3">
                    <TextBlock Text="CYCLE" Foreground="{Binding CycleStepFt}" Style="{StaticResource txtStyle}" />
                </Border>
                <ComboBox Grid.Row="7" Grid.Column="1" Style="{StaticResource comboStyle}" SelectedItem="{Binding CycleStepFt, Mode=TwoWay}"/>
                <ComboBox Grid.Row="7" Grid.Column="2" Style="{StaticResource comboStyle}" SelectedItem="{Binding CycleStepBg, Mode=TwoWay}"/>

                <!--루프-->
                <Border Background="{Binding LoopStepBg}" Grid.Row="8" Grid.Column="0" Margin="3">
                    <TextBlock Text="LOOP" Foreground="{Binding LoopStepFt}" Style="{StaticResource txtStyle}" />
                </Border>
                <ComboBox Grid.Row="8" Grid.Column="1" Style="{StaticResource comboStyle}" SelectedItem="{Binding LoopStepFt, Mode=TwoWay}"/>
                <ComboBox Grid.Row="8" Grid.Column="2" Style="{StaticResource comboStyle}" SelectedItem="{Binding LoopStepBg, Mode=TwoWay}"/>

                <!--종료-->
                <Border Background="{Binding EndStepBg}" Grid.Row="9" Grid.Column="0" Margin="3">
                    <TextBlock Text="END" Foreground="{Binding EndStepFt}" Style="{StaticResource txtStyle}" />
                </Border>
                <ComboBox Grid.Row="9" Grid.Column="1" Style="{StaticResource comboStyle}" SelectedItem="{Binding EndStepFt, Mode=TwoWay}"/>
                <ComboBox Grid.Row="9" Grid.Column="2" Style="{StaticResource comboStyle}" SelectedItem="{Binding EndStepBg, Mode=TwoWay}"/>
            </Grid>
        </StackPanel>

        <!--단위 설정-->
        <StackPanel Grid.Row="1" Grid.Column="2" Margin="15,0,0,0">
            <StackPanel Margin="10,10,0,0" Orientation="Horizontal">
                <Rectangle Width="3" Fill="White" Margin="0,0,5,0" RadiusY="1.5" RadiusX="1.5"/>
                <TextBlock Text="단위 설정" Foreground="White" FontSize="20" />
            </StackPanel>

            <TextBlock Text="항목 단위 설정" Foreground="White" FontSize="15" Margin="10,30,0,0"/>

            <Grid Margin="0,30,0,0">
                <Grid.Resources>
                    <Style x:Key="UnitComboStyle" TargetType="ComboBox">
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="Width" Value="70"/>
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="FontFamily" Value="NanumGothic"/>
                    </Style>
                    <Style x:Key="ComboItemStyle" TargetType="ComboBoxItem">
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="FontFamily" Value="NanumGothic"/>
                    </Style>
                </Grid.Resources>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <TextBlock Text="단위" Foreground="White" FontSize="13" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="자릿수" Foreground="White" FontSize="13" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!--전압-->
                <TextBlock Text="전압" Foreground="White" Style="{StaticResource txtStyle}" Grid.Row="1" Grid.Column="0"/>
                <ComboBox Grid.Row="1" Grid.Column="1" Style="{StaticResource UnitComboStyle}" SelectedIndex="{Binding VoltUnitIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="kV" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="V" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="mV" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="uV" Style="{StaticResource ComboItemStyle}"/>
                </ComboBox>
                <ComboBox Grid.Row="1" Grid.Column="2" Style="{StaticResource UnitComboStyle}" SelectedIndex="{Binding VoltRoundIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="0" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="1" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="2" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="3" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="4" Style="{StaticResource ComboItemStyle}"/>
                </ComboBox>
                <!--전류-->
                <TextBlock Text="전류" Foreground="White" Style="{StaticResource txtStyle}" Grid.Row="2" Grid.Column="0"/>
                <ComboBox Grid.Row="2" Grid.Column="1" Style="{StaticResource UnitComboStyle}" SelectedIndex="{Binding CurrUnitIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="kA" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="A" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="mA" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="uA" Style="{StaticResource ComboItemStyle}"/>
                </ComboBox>
                <ComboBox Grid.Row="2" Grid.Column="2" Style="{StaticResource UnitComboStyle}" SelectedIndex="{Binding CurrRoundIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="0" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="1" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="2" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="3" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="4" Style="{StaticResource ComboItemStyle}"/>
                </ComboBox>
                <!--용량-->
                <TextBlock Text="용량" Foreground="White" Style="{StaticResource txtStyle}" Grid.Row="3" Grid.Column="0"/>
                <ComboBox Grid.Row="3" Grid.Column="1" Style="{StaticResource UnitComboStyle}" SelectedIndex="{Binding CapaUnitIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="kAh" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="Ah" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="mAh" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="uAh" Style="{StaticResource ComboItemStyle}"/>
                </ComboBox>
                <ComboBox Grid.Row="3" Grid.Column="2" Style="{StaticResource UnitComboStyle}" SelectedIndex="{Binding CapaRoundIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="0" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="1" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="2" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="3" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="4" Style="{StaticResource ComboItemStyle}"/>
                </ComboBox>
                <!--전력-->
                <TextBlock Text="전력" Foreground="White" Style="{StaticResource txtStyle}" Grid.Row="4" Grid.Column="0"/>
                <ComboBox Grid.Row="4" Grid.Column="1" Style="{StaticResource UnitComboStyle}" SelectedIndex="{Binding PowerUnitIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="kW" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="W" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="mW" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="uW" Style="{StaticResource ComboItemStyle}"/>
                </ComboBox>
                <ComboBox Grid.Row="4" Grid.Column="2" Style="{StaticResource UnitComboStyle}" SelectedIndex="{Binding PowerRoundIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="0" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="1" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="2" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="3" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="4" Style="{StaticResource ComboItemStyle}"/>
                </ComboBox>
                <!--전력량-->
                <TextBlock Text="전력량" Foreground="White" Style="{StaticResource txtStyle}" Grid.Row="5" Grid.Column="0"/>
                <ComboBox Grid.Row="5" Grid.Column="1" Style="{StaticResource UnitComboStyle}" SelectedIndex="{Binding WatthourUnitIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="kWh" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="Wh" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="mWh" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="uWh" Style="{StaticResource ComboItemStyle}"/>
                </ComboBox>
                <ComboBox Grid.Row="5" Grid.Column="2" Style="{StaticResource UnitComboStyle}" SelectedIndex="{Binding WatthourRoundIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="0" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="1" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="2" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="3" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="4" Style="{StaticResource ComboItemStyle}"/>
                </ComboBox>
                <!--임피던스-->
                <TextBlock Text="임피던스" Foreground="White" Style="{StaticResource txtStyle}" Grid.Row="6" Grid.Column="0"/>
                <ComboBox Grid.Row="6" Grid.Column="1" Style="{StaticResource UnitComboStyle}" SelectedIndex="{Binding ResiUnitIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="kΩ" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="Ω" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="mΩ" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="u" Style="{StaticResource ComboItemStyle}"/>
                </ComboBox>
                <ComboBox Grid.Row="6" Grid.Column="2" Style="{StaticResource UnitComboStyle}" SelectedIndex="{Binding ResiRoundIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="0" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="1" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="2" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="3" Style="{StaticResource ComboItemStyle}"/>
                    <ComboBoxItem Content="4" Style="{StaticResource ComboItemStyle}"/>
                </ComboBox>
            </Grid>
        </StackPanel>
        
        <!--화면 설정-->
        <StackPanel Grid.Row="1" Grid.Column="3" Margin="15,0,0,0">
            <StackPanel Margin="10,10,0,0" Orientation="Horizontal">
                <Rectangle Width="3" Fill="White" Margin="0,0,5,0" RadiusY="1.5" RadiusX="1.5"/>
                <TextBlock Text="화면 설정" Foreground="White" FontSize="20" />
            </StackPanel>

            <Grid Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="데이터 갱신 주기" Foreground="White" FontSize="13" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBox Text="{Binding DataRenuwal, Mode=TwoWay}" Grid.Row="0" Grid.Column="1" FontSize="18" Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBlock Text="SEC" Foreground="White" FontSize="13" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <TextBlock Text="모니터링 폰트 크기" Foreground="White" FontSize="13" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBox Text="{Binding MoniFontSize, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" FontSize="18" Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </Grid>
        </StackPanel>

        <!--채널 모니터링 목록 설정-->
        <StackPanel Grid.Row="1" Grid.Column="4" Margin="15,0,0,0">
            <StackPanel Margin="10,10,0,0" Orientation="Horizontal">
                <Rectangle Width="3" Fill="White" Margin="0,0,5,0" RadiusY="1.5" RadiusX="1.5"/>
                <TextBlock Text="채널 모니터링 목록 설정" Foreground="White" FontSize="20" />
            </StackPanel>
 
            <TextBlock Text="상태 목록" Foreground="White" FontSize="15" Margin="10,30,0,30"/>

            <!--<StackPanel Margin="10,10,0,0" Orientation="Horizontal">
                <Button Background="{x:Null}" Width="20" BorderBrush="{x:Null}">
                    <fa5:ImageAwesome Icon="Solid_CaretUp" Foreground="White"/>
                </Button>
                <Button Background="{x:Null}" Width="20" BorderBrush="{x:Null}">
                    <fa5:ImageAwesome Icon="Solid_CaretDown" Foreground="White"/>
                </Button>
            </StackPanel>-->

            <DataGrid x:Name="MoniDataGrid"
                      Margin="0,5,0,0"
                      AutoGenerateColumns="False" 
                      SelectionMode="Single" 
                      CanUserAddRows="False"
                      AllowDrop="True"
                      ItemsSource="{Binding MoniSetter, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}"
                      PreviewMouseRightButtonDown="DataGrid_PreviewMouseLeftButtonDown" Drop="DataGrid_Drop">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="순번" Width="40"  FontSize="17" Binding="{Binding No}"   IsReadOnly="True"/>
                    <DataGridTextColumn Header="항목" Width="130" FontSize="17" Binding="{Binding Name}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="너비" Width="50"  FontSize="17" Binding="{Binding Width}"/>
                    <DataGridCheckBoxColumn Header="활성화" Binding="{Binding Enable}"/>
                </DataGrid.Columns>

            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
